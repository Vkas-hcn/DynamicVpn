<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="clickMain"

    android:background="#402566">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#251244"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:onClick="clickNav"
        app:layout_constraintTop_toBottomOf="@+id/in_main_title">
        <ImageView
            android:id="@+id/img_title_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:onClick="toNavBack"
            android:src="@drawable/ic_title_back_dyna"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VPN"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            app:drawableTopCompat="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/tv_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|start"
            android:layout_marginTop="47dp"
            android:text="Privacy agreement"
            android:onClick="toPP"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:drawablePadding="7dp"
            app:drawableStartCompat="@drawable/ic_pp"
            app:drawableEndCompat="@drawable/ic_nav_be" />
        <TextView
            android:id="@+id/tv_updata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|start"
            android:layout_marginTop="23dp"
            android:text="Update"
            android:onClick="toUpgrade"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:drawablePadding="7dp"
            app:drawableStartCompat="@drawable/ic_updata"
            app:drawableEndCompat="@drawable/ic_nav_be" />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|start"
            android:layout_marginTop="23dp"
            android:text="Share"
            android:onClick="toShare"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:drawablePadding="7dp"
            app:drawableStartCompat="@drawable/ic_share"
            app:drawableEndCompat="@drawable/ic_nav_be" />
    </LinearLayout>
</LinearLayout>